<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tlcsdm.fxtemplate.controller.MainController"
            prefWidth="900" prefHeight="700">

    <top>
        <MenuBar>
            <Menu text="%menu.file">
                <MenuItem text="%menu.settings" onAction="#openSettings"/>
                <SeparatorMenuItem/>
                <MenuItem text="%menu.exit" onAction="#exitApplication"/>
            </Menu>
            <Menu text="%menu.help">
                <MenuItem text="%menu.about" onAction="#showAbout"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="%app.title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="%about.description" wrapText="true" style="-fx-font-size: 14px;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10; -fx-background-color: -color-bg-subtle;">
            <Label fx:id="statusLabel" text="%status.ready"/>
        </HBox>
    </bottom>

</BorderPane>
